<UserControl x:Class="DragDropSave.Connecteur"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DragDropSave"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="50"
             x:Name="root"
             Background="Transparent"
             IsHitTestVisible="{Binding IsChildHitTestVisible,ElementName=root}">

    <Canvas x:Name="canvas" DragLeave="canvas_DragLeave" Drop="canvas_Drop" DragOver="canvas_DragOver" AllowDrop="True" Background="Transparent"/>

</UserControl>
